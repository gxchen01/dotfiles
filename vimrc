
set nocompatible
set nu
set showmatch
set incsearch
set hlsearch

"We can support mouse now
set mouse=a
set selection=exclusive
set selectmode=mouse,key

set paste

"don't bakup the file
set nobackup
set nowb

set tabstop=4
set shiftwidth=4
set expandtab
filetype indent on
autocmd filetype makefile setlocal noexpandtab

set autoindent
set cindent
set smartindent

syntax on
"colorscheme evening
"colorscheme desert
set guifont=consolas:h15

